<!DOCTYPE html>
#set ($cdn = "http://aka-cdn.uce.edu.ec/ares/perseo")
#set ($html-com = "$cdn/my_html")
#set ($x3=$theme.getSetting("theme-type"))
#set ($theme-type = "$cdn/$x3")

#parse ($init)

##geturl
#set($completeURL=$portalUtil.getCurrentCompleteURL($request))
#set($canonicalURL=$portalUtil.getCanonicalURL($completeURL, $themeDisplay, $layout))
#set($urlx=$htmlUtil.escapeAttribute($canonicalURL))
##fin get url

<html class="$root_css_class" dir="#language (" lang.dir")" lang="$w3c_language_id" xmlns:og="http://opengraphprotocol.org/schema/">
<head prefix="og: http://ogp.me/ns#">
    <title>$the_title - $company_name</title>
    <meta content="initial-scale=1.0, width=device-width" name="viewport" />
	<link rel="dns-prefetch" href="http://aka-cdn.uce.edu.ec">
    
	$theme.include($top_head_include)

	#if(!$urlx.contains("noticia"))
	<meta property="og:url" content="$urlx" />	

	<meta property="og:title" content="$site_name" />
	<meta property="og:image" content="$html-com/img/logo.png" />	
	<meta property="og:description" content="Omnium Potentior est Sapientia" />
	
	<meta name="twitter:url" content="$urlx" />	
	<meta name="twitter:card" content="summary"/>
	<meta name="twitter:site" content="@UCentralEcuador"/>

	<meta name="twitter:title" content="$site_name"/>	
	<meta name="twitter:image" content="$html-com/img/logo.png"/>
	<meta name="twitter:description" content="Omnium Potentior est Sapientia"/>
	
	#else
	<meta property="og:url" content="$urlx" />	
	<meta name="twitter:url" content="$urlx" />	
	<meta name="twitter:card" content="summary_large_image"/>
	<meta name="twitter:site" content="@UCentralEcuador"/>
	#end

	<link rel="stylesheet" href="$html-com/css/dcm-loader.min.css" type="text/css" id="loaderStyle" />	
    <link rel="stylesheet" href="$theme-type/css/dcmtheme.min.css?v=0.1" type="text/css" />
    
	   
	<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
	<script src="$theme-type/js/dcmtheme.min.js?v=0.1" type="text/javascript" async="async"></script>

    
</head>
<body class="$css_class container-fluid metro" style="background-color:#fff;">    
    $theme.include($body_top_include)	

    <nav id="dcmmenu" style="z-index: 88889;">
    </nav>
    <div id="page">
	<div id="loader" style="">
        <div id="loader2" class="" style="">
            <div id="div1">
                <div id="div2">
                    <img src="$html-com/images/logo.png" alt="logo">
                </div>
            </div>
            <div class="spinner">
                <div class="bounce1"></div>
                <div class="bounce2"></div>
                <div class="bounce3"></div>
            </div>
        </div>
    </div>

        #if ($is_signed_in)
        <div id="dcmdockbar" style="display:block;">#dockbar()</div>
        #end


        <div class="topBar bg-blue app-bar" id="topBar" style="position: fixed;" data-load="$html-com/uce_topBar_mmmenu.txt">
        </div>
        <div class="dcm top">
            <a class="scrollto" href="#main-content">Scroll to top</a>
            <div class="clear"></div>
            <div class="scroll">
                <p>Top</p>
            </div>
        </div>
		#set($mxt="$theme-type")
		#if($mxt.contains("general"))
		<nav id="breadcrumbs">#breadcrumbs()</nav>
		#end
        #if ($selectable)
        $theme.include($content_include)
        #else
        $portletDisplay.recycle()

        $portletDisplay.setTitle($the_title)

        $theme.wrapPortlet("portlet.vm", $content_include)
        #end



		<!--Full views para .has-full-view-->
        <div class="full-views-wrap" data-load="$html-com/full_view_01.txt"></div>
        <!--Fin Full views -->

		$theme.include($body_bottom_include)
        $theme.include($bottom_include)
        
    </div>
</body>
</html>
